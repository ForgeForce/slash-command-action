  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/github": "^5.0.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.1",
    "@vercel/ncc": "^0.34.0",
    "jest": "^28.1.2",
    "jest-circus": "^28.1.2",
    "nock": "^13.2.8",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
}
